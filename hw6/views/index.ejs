<!DOCTYPE html>
<html>
<head>
      <title></title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <style type="text/css">
        .header h1{
          margin-top: 60px;
        }
     
     </style>
</head>
<body>
  <div class="container">
          <div class="header page-header text-left text-info">
            <h2>Users list</h2> 
            
              <a href="/create" class="btn btn-success">Add New</a>
                                
          </div><br>
          <% if(data.length){ %> 
          <table class='table table-striped'>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
             <% for(var i = 0; i< data.length; i++) {%>  
             <tr>
                <th><%= data[i]["_id"] %></th>
                <td><%= data[i]["name"] %></td>
                <td><%= data[i]["surname"] %></td>
                <td>
                  <a href='edit/<%= data[i]["_id"] %>' data-toggle='tooltip' class="btn btn-sm btn-info edit">Edit</a>
                  <a href='delete/<%= data[i]["_id"] %>' data-toggle='tooltip' class="btn btn-sm btn-danger delete">Delete</a>                         
                </td>
             </tr>
             <% } %>
            </tbody>
          </table>
          <%}else{ %>
          <h1>NO USERS FOUND</h1>
          <% } %> 
  </div>

</body>
</html>